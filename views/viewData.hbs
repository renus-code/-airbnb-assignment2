<h2>{{title}}</h2>

<table border="1" cellpadding="6" cellspacing="0">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Host Name</th>
    <th>Neighbourhood</th>
    <th>Property Type</th>
    <th>Room Type</th>
    <th>Price</th>
    <th>Service Fee</th>
    <th>Country</th>
    <th>Availability</th>
    <th>Image</th>
  </tr>

  {{#each listings}}
    <tr>
      <td>{{id}}</td>
      <td>{{NAME}}</td>
      <td>{{[host name]}}</td>
      <td>{{neighbourhood}}</td>
      <td>{{property_type}}</td>
      <td>{{[room type]}}</td>
      <td>{{price}}</td>
      {{!-- <td>{{[service fee]}}</td> --}}
      <td>{{formatServiceFee [service fee]}}</td>
      <td>{{country}}</td>
      <td>{{[availability 365]}}</td>

      {{!-- Display first image only --}}
      <td>
        {{#if images.[0]}}
          <img src="{{images.[0]}}" alt="{{NAME}}" width="120" height="90" />
        {{else}}
          <span>No Image</span>
        {{/if}}
      </td>
    </tr>
  {{/each}}
</table>
